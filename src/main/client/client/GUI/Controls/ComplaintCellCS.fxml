<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane fx:id="paneRow" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <Label fx:id="lblText" wrapText="true" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <FlowPane alignment="CENTER_RIGHT" columnHalignment="RIGHT" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Status:" />
            <ComboBox fx:id="cmbStatus" prefWidth="150.0" />
            <Button fx:id="btnApply" mnemonicParsing="false" onAction="#updateStatus" text="Apply" />
         </children>
      </FlowPane>
   </right>
</BorderPane>
