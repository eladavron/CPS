<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root style="-fx-background-color: rgba(0,0,0,0.5);" stylesheets="@../CSS/material.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane fx:id="paneContent" prefHeight="200.0" prefWidth="200.0" styleClass="card" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <top>
            <Label fx:id="lblTitle" styleClass="card-title" text="Please Wait" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <FlowPane fx:id="paneButtons" alignment="CENTER_RIGHT" columnHalignment="RIGHT" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" text="Cancel" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </BorderPane.margin>
            </FlowPane>
         </bottom>
         <center>
            <AnchorPane BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="lblMessage" alignment="TOP_LEFT" prefHeight="95.0" prefWidth="180.0" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</fx:root>
